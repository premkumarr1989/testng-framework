<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="MyShopSuite" verbose="1"  >
    <test name="Tests in Windows - Chrome" >
        <parameter name="browser" value="Chrome"></parameter>
        <parameter name="os" value="windows"></parameter>
        <classes>
            <class name="org.example.demo.LoginTests" />
            <class name="org.example.demo.ShoppingTests"></class>
        </classes>
    </test>

    <test name="Tests in OSx - firefox" >
        <parameter name="browser" value="firefox"></parameter>
        <parameter name="os" value="osx"></parameter>
        <classes>
            <class name="org.example.demo.LoginTests" />
            <class name="org.example.demo.ShoppingTests"></class>
        </classes>
    </test>



    
</suite>

